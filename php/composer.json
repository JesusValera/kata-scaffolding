{
    "name": "kata-setup/kata",
    "description": "Initial code to start TDD katas",
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src",
            "KataTests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
